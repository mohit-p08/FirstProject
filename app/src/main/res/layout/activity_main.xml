<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/main_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:text="       MATRIX CALCULATOR"
                android:textAlignment="center"
                android:textColor="#00BCD4"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/op_button"
                android:onClick="Addition"
                android:text="Matrix Addition"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/op_button"
                android:onClick="Subtraction"
                android:text="Matrix Subtraction"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/op_button"
                android:onClick="ScalarMultiplication"
                android:text="Scalar Multiplication"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/op_button"
                android:onClick="MatrixMultiplication"
                android:text="Matrix Multiplication"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/op_button"
                android:onClick="Inverse"
                android:text="Inverse of a Matrix"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/op_button"
                android:onClick="Determinant"
                android:text="Matrix Determinant"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/op_button"
                android:onClick="Transpose"
                android:text="Transposed Matrix"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/op_button"
                android:onClick="Degree"
                android:text="Degree of Matrix"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/op_button"
                android:onClick="Rank"
                android:text="Rank of Matrix"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/op_button"
                android:onClick="FindX"
                android:text="AX=B, X=?"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/op_button"
                android:onClick="Equations"
                android:text="System of Linear Equations"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="20sp" />


        </LinearLayout>
    </RelativeLayout>

</ScrollView>